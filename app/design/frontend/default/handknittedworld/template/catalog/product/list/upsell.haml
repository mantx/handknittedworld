- if (count($this->getItemCollection()->getItems()))
  .box-collateral.box-up-sell
    %h2= $this->__('You may also be interested in the following product(s)')
    %table.mini-products-grid#upsell-product-table
      -# // $this->setColumnCount(5); // uncomment this line if you want to have another number of columns. also can be changed in layout ?>
      - $this->resetItemsIterator()
      - for ($_i = 0; $_i < $this->getRowCount(); $_i++)
        %tr
          - for ($_j = 0; $_j < $this->getColumnCount(); $_j++)
            - if ($_link = $this->getIterableItem())
              %td
                %a(href="#{$_link->getProductUrl()}" title="#{$this->htmlEscape($_link->getName())}" class="product-image")
                  %img(src="#{$this->helper('catalog/image')->init($_link, 'small_image')->resize(125)}" width="125" height="125" alt="#{$this->htmlEscape($_link->getName())}")
                %h3.product-name
                  %a(href="#{$_link->getProductUrl()}" title="#{$this->htmlEscape($_link->getName())}")= $this->htmlEscape($_link->getName())
                - echo $this->getPriceHtml($_link, true, '-upsell')
                - echo $this->getReviewsSummaryHtml($_link)
            - else
              %td.empty= "&nbsp;"

    :javascript
      decorateTable('upsell-product-table')

