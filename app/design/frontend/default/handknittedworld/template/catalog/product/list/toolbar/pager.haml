  * Products list Pagination
  *
  * @see Mage_Catalog_Block_Product_List_Toolbar_Pager
  *

%ol
  - if (!$this->isFirstPage())
    %li
      %a.previous(href="#{$this->getPreviousPageUrl()}" title="#{$this->__('Previous'}")
        %img.v-middle(src="#{$this->getSkinUrl('images/pager_arrow_left.gif')}" alt="#{$this->__('Previous')}" )


  - if ($this->canShowFirst())
    %li
      %a.first(href="#{$this->getFirstPageUrl()}")1

  - if ($this->canShowPreviousJump())
    %li
      %a.previous_jump(title="" href="#{$this->getPreviousJumpUrl()}")...

  - foreach ($this->getFramePages() as $_page)
    - if ($this->isPageCurrent($_page))
      %li.current= $_page
    - else
      %li
        %a(href="#{$this->getPageUrl($_page)}">= $_page


  - if ($this->canShowNextJump())
    %li
      %a.next_jump(title="" href="#{$this->getNextJumpUrl()}")...

  - if ($this->canShowLast())
    %li
      %a.last(href="#{$this->getLastPageUrl()}")= $this->getLastPageNum()

    - if (!$this->isLastPage())
      %li
        %a.next(href="#{$this->getNextPageUrl()}" title="#{$this->__('Next')}")
          %img.v-middle(src="#{$this->getSkinUrl('images/pager_arrow_right.gif')}" alt="#{$this->__('Next')}")

