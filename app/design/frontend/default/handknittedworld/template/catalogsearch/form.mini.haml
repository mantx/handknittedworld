%form#search_mini_form(action="#{$this->helper('catalogsearch')->getResultUrl()}" method="get")
  .form-search
    %label(for="search)
      = $this->__('Search')
    %input.input-text(id="search" type="text" name="#{$this->helper('catalogsearch')->getQueryParamName()}" value="#{$this->helper('catalogsearch')->getEscapedQueryText()}")
    %input.search_btn(type="image" src="#{$this->getSkinUrl('images/icons/search_ico.gif')}" value="#{$this->__('Go')}")        
    .search-autocomplete#search_autocomplete
    
    :javascript
      var searchForm = new Varien.searchForm('search_mini_form', 'search', '<?php echo $this->__('Search entire store here...') ?>');
      searchForm.initAutocomplete('<?php echo $this->helper('catalogsearch')->getSuggestUrl() ?>', 'search_autocomplete');
